{
    "name": "@nlib/changelog",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.1.9",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/changelog",
    "repository": "https://github.com/nlibjs/changelog",
    "engines": {
        "node": ">=12"
    },
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*"
    ],
    "bin": {
        "nlib-changelog": "lib/cli.js"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:index": "indexen --input src --output src/index.ts",
        "build:tsc": "tsc",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "version": "run-s version:*",
        "version:changelog": "ts-node src/cli.ts --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "@nlib/date": "0.1.2",
        "@nlib/global": "3.18.0",
        "@nlib/nodetool": "0.1.17",
        "@nlib/typing": "0.2.0"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.16",
        "@nlib/lint-commit": "0.1.4",
        "@nlib/test": "3.18.7",
        "@types/eslint": "7.2.8",
        "@types/node": "14.14.37",
        "@typescript-eslint/eslint-plugin": "4.21.0",
        "@typescript-eslint/parser": "4.21.0",
        "ava": "3.15.0",
        "conventional-changelog-cli": "2.1.1",
        "eslint": "7.23.0",
        "husky": "4.3.8",
        "lint-staged": "10.5.4",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.2.3"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "!**/*.module.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "rules": {
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": [
                    "src/cli.ts"
                ],
                "rules": {
                    "no-console": "off",
                    "@nlib/no-globals": [
                        "error",
                        {
                            "allowed": [
                                "__dirname",
                                "require",
                                "module"
                            ]
                        }
                    ]
                }
            },
            {
                "files": [
                    "src/cli.test.ts"
                ],
                "rules": {
                    "no-console": "off",
                    "@nlib/no-globals": [
                        "error",
                        {
                            "allowed": [
                                "__dirname"
                            ]
                        }
                    ]
                }
            },
            {
                "files": [
                    "src/serializeCommitGroup.ts"
                ],
                "rules": {
                    "new-cap": "off"
                }
            }
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "nlib-lint-commit --input HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
