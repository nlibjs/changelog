{
    "name": "@nlib/changelog",
    "description": "A command to generate CHANGELOG.md from commit history",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.4",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://gojabako.zone"
    },
    "homepage": "https://github.com/nlibjs/changelog",
    "repository": "https://github.com/nlibjs/changelog",
    "engines": {
        "node": ">=14"
    },
    "type": "module",
    "main": "./lib/index.mjs",
    "files": [
        "lib",
        "!**/*.test.*"
    ],
    "bin": {
        "changelog": "./lib/cli.mjs",
        "nlib-changelog": "./lib/cli.mjs"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:index": "nlib-indexen --output src/index.ts \"./**/*.ts\"",
        "build:tsc": "tsc",
        "build:esmify": "esmify \"lib/**\"",
        "test": "run-s test:*",
        "test:build": "run-s test:build:*",
        "test:build:tsc": "tsc",
        "test:build:esmify": "esmify --keepSourceMap \"lib/**\"",
        "test:unit": "ava --timeout=30s",
        "lint": "eslint --ext .mts --ext .ts src",
        "postversion": "run-s postversion:*",
        "postversion:changelog": "nlib-changelog --output CHANGELOG.md",
        "postversion:add": "git add .",
        "postversion:commit": "git commit --amend --no-edit"
    },
    "dependencies": {
        "@nlib/typing": "1.0.0",
        "commander": "11.0.0"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.19.8",
        "@nlib/githooks": "0.1.0",
        "@nlib/indexen": "0.2.7",
        "@types/node": "20.5.0",
        "@typescript-eslint/eslint-plugin": "6.4.0",
        "@typescript-eslint/parser": "6.4.0",
        "ava": "5.3.1",
        "eslint": "8.47.0",
        "lint-staged": "14.0.0",
        "npm-run-all": "4.1.5",
        "typescript": "5.1.6"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "ignorePatterns": [
            "src/index.ts"
        ]
    },
    "ava": {
        "files": [
            "lib/**/*.test.{ts,tsx,js,mjs,cjs,jsx}"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}