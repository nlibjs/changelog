{
  "name": "@nlib/changelog",
  "description": "A command to generate CHANGELOG.md from commit history",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.3.1",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://gojabako.zone"
  },
  "homepage": "https://github.com/nlibjs/changelog",
  "repository": "https://github.com/nlibjs/changelog",
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "main": "./lib/index.mjs",
  "files": [
    "lib",
    "!**/*.test.*"
  ],
  "bin": {
    "changelog": "./lib/cli.mjs",
    "nlib-changelog": "./lib/cli.mjs"
  },
  "scripts": {
    "build": "tsc",
    "test": "run-s build test:*",
    "test:unit": "ava --timeout=30s",
    "lint": "eslint --ext .mts src",
    "version": "node ./lib/cli.mjs --output CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "@nlib/typing": "1.1.0",
    "commander": "11.1.0"
  },
  "devDependencies": {
    "@nlib/eslint-config": "3.20.2",
    "@nlib/githooks": "0.2.0",
    "@nlib/indexen": "0.2.9",
    "@types/node": "20.10.6",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "ava": "5.3.1",
    "eslint": "8.56.0",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.1",
    "typescript": "5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "@nlib/eslint-config"
    ],
    "env": {
      "node": true
    }
  },
  "ava": {
    "files": [
      "lib/**/*.test.mjs"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
