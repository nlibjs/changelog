{
    "name": "@nlib/changelog",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.1.9",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/changelog",
    "repository": "https://github.com/nlibjs/changelog",
    "engines": {
        "node": ">=12"
    },
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*"
    ],
    "bin": {
        "nlib-changelog": "lib/cli.js"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:index": "indexen --input src --output src/index.ts",
        "build:tsc": "tsc --project tsconfig.build.json",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "version": "run-s version:*",
        "version:changelog": "ts-node src/cli.ts --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "@nlib/date": "0.1.2",
        "@nlib/global": "3.18.0",
        "@nlib/nodetool": "0.1.17",
        "@nlib/typing": "0.2.0"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.23",
        "@nlib/githooks": "0.0.5",
        "@nlib/lint-commit": "0.1.4",
        "@nlib/test": "3.18.7",
        "@types/eslint": "7.2.14",
        "@types/node": "15.14.2",
        "@typescript-eslint/eslint-plugin": "4.28.3",
        "@typescript-eslint/parser": "4.28.2",
        "ava": "3.15.0",
        "eslint": "7.30.0",
        "lint-staged": "11.0.0",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.3.5"
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
