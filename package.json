{
  "name": "@nlib/changelog",
  "description": "A command to generate CHANGELOG.md from commit history",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.3.2",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://gojabako.zone"
  },
  "homepage": "https://github.com/nlibjs/changelog",
  "repository": "https://github.com/nlibjs/changelog",
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "main": "./lib/index.js",
  "files": [
    "lib",
    "!**/*.test.*"
  ],
  "bin": {
    "changelog": "./lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "run-s build test:*",
    "test:unit": "tsm-test lib",
    "lint": "biome lint",
    "version": "node ./lib/cli.js --output CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "@nlib/typing": "3.0.1",
    "commander": "12.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@nlib/tsm": "1.0.1",
    "@types/node": "22.7.5",
    "npm-run-all": "4.1.5",
    "typescript": "5.6.3"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
