{
    "name": "@nlib/changelog",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.1.4",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/changelog",
    "repository": "https://github.com/nlibjs/changelog",
    "engines": {
        "node": ">=12"
    },
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*"
    ],
    "bin": {
        "nlib-changelog": "lib/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "version": "run-s version:*",
        "version:changelog": "ts-node src/cli.ts --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "@nlib/date": "^0.1.1",
        "@nlib/global": "^3.17.15",
        "@nlib/nodetool": "^0.1.8",
        "@nlib/typing": "^0.1.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nlib/eslint-config": "^3.17.11",
        "@nlib/test": "^3.18.6",
        "@types/eslint": "^7.2.2",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "ava": "^3.12.1",
        "conventional-changelog-cli": "^2.1.0",
        "eslint": "^7.8.1",
        "husky": "^4.3.0",
        "lint-staged": "^10.3.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "!**/*.module.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "rules": {
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": [
                    "src/cli.ts"
                ],
                "rules": {
                    "no-console": "off",
                    "@nlib/no-globals": [
                        "error",
                        {
                            "allowed": [
                                "__dirname",
                                "module"
                            ]
                        }
                    ]
                }
            },
            {
                "files": [
                    "src/serializeCommitGroup.ts"
                ],
                "rules": {
                    "new-cap": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@nlib/eslint-config/commitlint.config.js"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
