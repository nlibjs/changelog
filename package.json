{
    "name": "@nlib/changelog",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.1",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/changelog",
    "repository": "https://github.com/nlibjs/changelog",
    "engines": {
        "node": ">=14"
    },
    "type": "module",
    "main": "./lib/index.mjs",
    "files": [
        "lib",
        "!**/*.test.*"
    ],
    "bin": {
        "changelog": "./lib/cli.mjs",
        "nlib-changelog": "./lib/cli.mjs"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:index": "nlib-indexen --output src/index.ts \"./**/*.ts\"",
        "build:tsc": "tsc",
        "build:esmify": "esmify \"lib/**\"",
        "test": "run-s test:*",
        "test:build": "run-s test:build:*",
        "test:build:tsc": "tsc",
        "test:build:esmify": "esmify --keepSourceMap \"lib/**\"",
        "test:unit": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "postversion": "run-s build postversion:*",
        "postversion:changelog": "node lib/cli.mjs --output CHANGELOG.md",
        "postversion:add": "git add .",
        "postversion:amend": "git commit -m \"$(git log -1 --format=%s)\" --amend"
    },
    "dependencies": {
        "@nlib/typing": "0.4.10",
        "commander": "9.4.0"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.19.4",
        "@nlib/esmify": "0.3.0",
        "@nlib/githooks": "0.1.0",
        "@nlib/indexen": "0.2.5",
        "@types/eslint": "8.4.5",
        "@types/node": "18.6.4",
        "ava": "4.3.1",
        "eslint": "8.21.0",
        "lint-staged": "13.0.3",
        "npm-run-all": "4.1.5",
        "typescript": "4.7.4"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "ignorePatterns": [
            "src/index.ts"
        ]
    },
    "ava": {
        "files": [
            "lib/**/*.test.{ts,tsx,js,mjs,cjs,jsx}"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
