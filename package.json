{
  "name": "@nlib/changelog",
  "description": "A command to generate CHANGELOG.md from commit history",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.3.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://gojabako.zone"
  },
  "homepage": "https://github.com/nlibjs/changelog",
  "repository": "https://github.com/nlibjs/changelog",
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "main": "./lib/index.mjs",
  "files": [
    "lib",
    "!**/*.test.*"
  ],
  "bin": {
    "changelog": "./lib/cli.mjs",
    "nlib-changelog": "./lib/cli.mjs"
  },
  "scripts": {
    "build": "tsc",
    "test": "run-s build test:*",
    "test:unit": "ava --timeout=30s",
    "lint": "eslint --ext .mts src",
    "postversion": "run-s build postversion:*",
    "postversion:changelog": "node ./lib/cli.mjs --output CHANGELOG.md",
    "postversion:add": "git add .",
    "postversion:commit": "git commit --amend --no-edit"
  },
  "dependencies": {
    "@nlib/typing": "1.0.0",
    "commander": "11.0.0"
  },
  "devDependencies": {
    "@nlib/eslint-config": "3.20.1",
    "@nlib/githooks": "0.1.0",
    "@nlib/indexen": "0.2.7",
    "@types/node": "20.5.0",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "ava": "5.3.1",
    "eslint": "8.47.0",
    "lint-staged": "14.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.2",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@nlib/eslint-config"
    ],
    "env": {
      "node": true
    }
  },
  "ava": {
    "files": [
      "lib/**/*.test.mjs"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
