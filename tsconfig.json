{
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "./node_modules",
        "paths": {
            "@nlib/typing": ["@nlib/typing/esm"],
            "@nlib/test": ["@nlib/test/esm"]
        },
        "outDir": "lib"
    }
}
